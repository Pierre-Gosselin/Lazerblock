{% extends 'layout.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3 card p-3 mt-5 ombre" style="background-color: rgba(0, 0, 0, 0.5);">
            <form method="post">
                <h3 class="h3 mb-3 font-weight-normal">Réinitialiser votre mot de passe</h3>

                <label for="defaultRegisterFormEmail">Saisissez votre adresse email pour réinitialiser votre mot de passe</label>
                <input type="email" id="defaultRegisterFormEmail" class="form-control mb-3" placeholder="E-mail" name="email">
                
                <button class="btn btn-block btn-outline-light" type="submit">Réinitialiser votre mot de passe</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
