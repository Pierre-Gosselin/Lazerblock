{% extends 'layout.html.twig' %}

{% block title %}Rejoignez nous !{% endblock %}

{% block content %}

<div class="container mt-5">
    <div class="row">
        <div class="col">
            <div class="row">
                <img src="{{ asset("images/7 sabre.png") }}"  style="width: 25%;" class="mx-auto" alt="">
            </div>
            <h2 class="mb-5 text-center">Rejoindre la force, tu veux ?</h2>

            {{ form_start(form) }}
                <div class="row">
                    <div class="col">
                        {{ form_row(form.firstname)}}
                    </div>
                    <div class="col">
                        {{ form_row(form.lastname)}}
                    </div>
                </div>
                
                <div class="row">
                    <div class="col">
                        {{ form_row(form.birthdate)}}
                    </div>
                    <div class="col">
                        {{ form_row(form.side) }}
                    </div>
                </div>
                {{ form_row(form.email)}}
                <div class="row">
                    <div class="col">                
                        {{ form_row(form.password.first) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.password.second) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="row">
                            <div class="col">
                                {{ form_label(form.newsletter) }}
                            </div>
                            <div class="col">
                                {{ form_widget(form.newsletter) }}
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <p>Captcha</p>
                    </div>
                </div>
                <div class="row justify-content-center mt-4">
                    <button type="submit" class="btn btn-outline-light" style="font-size:2em;">Rejoindre la force</button>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}