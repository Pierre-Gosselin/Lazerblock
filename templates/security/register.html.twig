{% extends 'layout.html.twig' %}

{% block title %}Rejoignez nous !{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="row">
            <img src="{{ asset("images/7 sabre.png") }}"  style="width: 30%;" class="mx-auto" alt="">
        </div>
        <div class="row">
            <div class="col">
                <h2 class="font mb-3 text-center">Rejoindre la force, tu veux ?</h2>
            </div>
        </div>
        {{ form_start(form) }}
            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.firstname)}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.email)}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.password.first) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.side) }}
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.lastname)}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.birthdate) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.password.second) }}
                        </div>
                    </div>
                    <div class="row">    
                        <div class="col">
                            <div class="row">
                                <div class="col">{{ form_label(form.newsletter) }}</div>
                            </div>
                            <div class="row align-items-center">
                                <div class="col">
                                    <p style="font-size: 0.8em;">Je souhaite recevoir un mail d'actualit√© chaque semaine.</p>
                                </div>
                                <div class="col-2">
                                    {{ form_widget(form.newsletter) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center mt-4">
                <button type="submit" class="btn btn-outline-light" style="font-size:2em;">Rejoindre la force</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}