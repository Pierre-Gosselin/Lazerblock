{% extends 'layout.html.twig' %}

{% block title %}boutique{% endblock %}

{% block content %}

<div class="container">
    <p class="mt-3 h4">
        {% if app.user.card %}
            Vous avez {{ app.user.card.credits }} crédit(s) à utiliser dans la boutique.<br>
            N'hésitez pas à vous faire plaisir !!!
        {% else %}
            Vous n'avez pas de carte de fidelité rattacher à ce compte.<br>
        {% endif %}   
    </p>
    <div class="row mt-4 justify-content-center">
        {% for gift in gifts %}
        <div class="card mx-3 mb-4" style="width: 150px">

            <div class="card-body p-0">
                <img src="{{ asset('images/gifts/' ~  gift.picture) }}" class=" mx-auto d-block" style="width: 130px; height:130px" alt="{{ gift.title }}">
                <div class="text-center">
                    <h5 class="h5">{{gift.title }}</h5>
                    <p class="card-text text-dark">Crédit : {{ gift.price }}</p>
                </div>
            </div>
            <div class="card-footer">
                {% if gift.enabled %}
                    <a href="{{ path('buy', {'id': gift.id}) }}" class="btn btn-outline-dark btn-block btn-sm" onclick="return(confirm('Êtes-vous sûr de votre choix ?'))">Achetez</a>
                {% else %}
                    <button class="btn btn-outline-dark btn-block btn-sm" disabled>Indisponnible</button>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>

    <div class="row mt-4">
        <div class="col">
            <p class="text-center h5">
                Vos crédits sont ajoutés à l'achat d'un ou de plusieurs tickets !!!
            </p>
        </div>
    </div>
</div>
{% endblock %}