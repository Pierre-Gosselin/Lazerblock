{% extends 'base.html.twig' %}

{% block body %}

<header>
    <nav class="navbar fixed-top navbar-expand-lg navbar-primary" style="padding-top:0;padding-bottom:0; margin:0;">
        <a class="navbar-brand" href="{{ path('home') }}" style="padding:0; margin:0; padding-bottom:10px;"><h1 id="siteTitle" class="pl-3">Laserwars</h1></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"><i class="fas fa-bars text-light"></i></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                {% if app.user %}
                <li class="nav-item dropdown">
                    <a href="" class="nav-link dropdown-toggle" data-toggle="dropdown" id="accountDropdownLink">
                        {% if app.user.avatar %}
                            <img src="{{ asset('images/avatar/'~ app.user.avatar.picture) }}" alt="{{ app.user.avatar.title }}" style="width: 48px; height:48px;">
                        {% endif %}
                        
                        {{ app.user.fullname }}
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="accountDropdownLink">
                        <a href="{{path('account_show')}}" class="dropdown-item">
                            <i class="fas fa-user mr-2"></i>
                            Mon compte
                        </a>
                        <a href="{{path('new_password')}}" class="dropdown-item">
                            <i class="fas fa-key mr-2"></i>
                            Modification de mot de passe
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-history mr-2"></i>
                            Mes réservations
                        </a>
                        <a href="{{ path('ticket_show') }} " class="dropdown-item">
                            <i class="fas fa-ticket-alt mr-2"></i>
                            Mes tickets
                        </a>
                        <a href="{{path('shop_show')}}" class="dropdown-item">
                            <i class="fas fa-gift mr-2"></i>
                            Boutique
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="{{path('logout')}}" class="dropdown-item">
                            <i class="fas fa-arrow-circle-left mr-2"></i>
                            Déconnexion
                        </a>
                    </div>
                </li>
                {% else %}     
                <li class="nav-item mr-2">
                    <a href="{{path('register')}}" class="nav-link btn btn-outline-light btn-lg">Inscription</a>
                </li>       
                <li class="nav-item">
                    <a href="{{path('login')}}" class="nav-link btn btn-outline-light btn-lg" data-toggle="modal" data-target="#login">Connexion</a>
                </li>
                {% endif %}
            </ul>
        </div>
    </nav>

    <!-- Modal de connexion -->
    <div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" style="background-color:rgba(0,0,0,0.8);">
                <div class="modal-header">
                    <h5 class="modal-title text-white" id="exampleModalLabel">Connexion à votre compte</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="text-white">&times;</span>
                    </button>
                </div>
                <!-- Formulaire de connexion -->
                <div class="modal-body">
                    <form method="post" action="{{ path('login') }}">
                        <div class="md-form">
                            <label for="inputEmail">E-mail</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-user"></i></div>
                                </div>
                                <input type="email" name="email" id="inputEmail" class="form-control" required autofocus>
                            </div>
                        </div>
                        <div class="md-form mt-3">
                            <label for="inputPassword">Mot de passe</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-lock"></i></div>
                                </div>
                                <input type="password" name="password" id="inputPassword" class="form-control" required>
                            </div>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                        <div class="row">
                            <div class="col mx-3">
                                <button class="btn btn-outline-light btn-block" data-target="#login">Se connecter</button>
                            </div>
                            <div class="col mx-3">
                                <a href="{{ path('forget_password') }}" class="btn btn-outline-light btn-block">Mot de passe oublié</a> 
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>

<main>
    {% for label, messages in  app.flashes  %}
        <div class="container">
        {% for message in messages %}
            <div class="alert alert-{{ label }}" role="alert">
                {{ message | raw }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}
        </div>
    {% endfor %}

    {% block content %}
    {% endblock %}
</main>

<footer>
    <div class="container mt-5">
        <div class="row">
            <div class="col">
                <div class="row border-top border-light mt-3 pt-3">
                    <div class="col-4">
                        <ul class="list-group text-center" style="list-style:none;">
                            <li><a href="#" style=" color:white">Nos tarifs</a></li>
                            <li><a href="#" style=" color:white">FAQ</a></li>
                            <li><a href="#" style=" color:white">Lien 1</a></li>
                            <li><a href="#" style=" color:white">Lien 1</a></li>
                        </ul>
                    </div>
                    <div class="col-4">
                        <ul class="list-group text-center" style="list-style:none;">
                            <li><a href="#" style=" color:white">Mentions légales</a></li>
                            <li><a href="#" style=" color:white">Lien 1</a></li>
                            <li><a href="#" style=" color:white">Lien 1</a></li>
                            <li><a href="#" style=" color:white">Lien 1</a></li>
                        </ul>
                    </div>
                    <div class="col-4">
                        <ul class="list-group text-center" style="list-style:none;">
                            <li><a href="#" style=" color:white"><i class="fas fa-envelope mr-2"></i>Nous contacter</a></li>
                            <li><a href="#" style=" color:white"><i class="fab fa-facebook"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <p class="text-center text-light mt-3" style="padding:0;margin-bottom:0;font-size: 0.8em;">Copyright {{ "now"|date('Y')}} LazerBlock - Tous droits réservés</p>
        <p class="text-center text-light" style="padding:0;margin:0;font-size: 0.8em;">Fait avec <i class="fas fa-heart" style="color:red"></i> par Shamsia et Pierre</p>
    </div>
</footer>
{% endblock %}
