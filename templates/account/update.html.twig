{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {# {{ encore_entry_link_tags('dashboard') }} #}
{% endblock %}

{% block title %}Modification de mon profil{% endblock %}

{% block content %}
    <div class="container">
        <div class="row mb-3 align-items-center">
            <div class="col-12 col-lg-8 mt-3">
                <h3 class="font">Modification de mes informations personnelles</h3>
            </div>
            <div class="col-12 col-lg-4 text-center text-lg-right">
                {{ form_start(form) }}
                <button type="submit" class="btn btn-outline-light btn-lg">Mettre à jour mon profil</button>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card p-3" style="background-color:rgba(0,0,0,0.5);">
                    <div class="row">
                        <div class="col-12 col-lg-6">{{ form_row(form.firstname) }}</div>
                        <div class="col-12 col-lg-6">{{ form_row(form.lastname) }}</div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-lg-6">{{ form_row(form.side) }}</div>
                        <div class="col-12 col-lg-6">
                            <div class="row">
                                <div class="col">{{ form_label(form.newsletter) }}</div>
                            </div>
                            <div class="row">
                                <div class="col"><p style="font-size: 0.8em;">Je souhaite recevoir un mail d'actualité chaque semaine.</p></div>
                                <div class="col-2">{{ form_widget(form.newsletter) }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <h3 class="font mb-3 mt-5">Changement de ma photo de profil</h3>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card p-3" style="background-color:rgba(0,0,0,0.5);">
                    <div class="row justify-content-center">
                        {% for avatar in avatars %}
                            <div class="mb-4">
                                <div>
                                    <img src="{{ asset('images/avatar/'~avatar.picture) }}" alt="{{ avatar.title}}" style="width: 96px; height:96px;">
                                </div>
                                <div class="text-center">
                                    <input style="width:20px;height:20px;cursor:pointer;" type="radio" name="avatar" value="{{ avatar.id }}" {{ avatar == app.user.avatar ? "checked" : "" }}>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {# {{ encore_entry_script_tags('dashboard') }} #}
{% endblock %}